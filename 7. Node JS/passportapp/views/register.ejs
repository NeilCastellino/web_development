<%- include('includes/header') %>

<div class="container reg-page">
	<% if(locals.errors){ %>
		<% errors.forEach(function(error){ %>
			<div class="alert alert-danger"><%= error.msg %></div>
		<% }) %>
	<% } %>
	<%- messages() %>
  <form class="form-signin" method ="post" action="/users/register">
    <h2 class="form-signin-heading text-centre">User Registration</h2>
    <label class="sr-only">Name</label>
    <input type="text" name="name" value="<%= (!!locals.name)?name:'' %>" class="form-control" placeholder="Name" required autofocus>
    <br>
    <label class="sr-only">Email</label>
    <input type="email" name="email" class="form-control" value="<%= (!!locals.email)?email:'' %>" placeholder="Email" required autofocus>
    <br>
    <label class="sr-only">Username</label>
    <input type="text" name="username" class="form-control" value="<%= (!!locals.username)?username:'' %>" placeholder="Username" required autofocus>
    <br>
    <label class="sr-only">Password</label>
    <input type="password" name="password" class="form-control" value="<%= (!!locals.password)?password:'' %>" placeholder="Password" required>
    <br>
    <label class="sr-only">Confirm Password</label>
    <input type="password" name="password2" class="form-control" value="<%= (!!locals.password2)?password2:'' %>" placeholder="Confirm Password" required>
    <br>
    <p>Have an Account? <a href="/users/login">Login here</a></p>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
  </form>

</div>

<%- include('includes/footer') %>